<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/CleanCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CleanCommunity" />



    <RadioButton
        android:id="@+id/Recycling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Recycling"/>

    <RadioButton
        android:id="@+id/CommunityGarden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CommunityGarden"/>

    <RadioButton
        android:id="@+id/TrashPickUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TrashPickUp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Signin" />

</LinearLayout>


